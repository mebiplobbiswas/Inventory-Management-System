@model Logistic_Inventory.Models.SubCategory

@{
    ViewBag.Title = "Create";
    ViewBag.page = "cat";
}



<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"> Product  Sub Categories</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/home")"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/products")">Products</a></li>
                            <li class="breadcrumb-item"> <a href="@Url.Content("~/subcategories")">Sub Categories</a>  </li>
                            <li class="breadcrumb-item active" aria-current="page"> Edit </li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/SubCategories")" class="btn btn-sm btn-neutral">Sub Category Edit</a>
                    @*<a href="#" class="btn btn-sm btn-neutral" id="modal" data-toggle="modal" data-target="#ProductModal">Search</a>*@
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">

                <div class="card-body">
                    <div class="row icon-examples">

                        <div class="container-fluid mt--12">
                            <div class="row">

                                <div class="col-xl-8 order-xl-1">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <h6 class="heading-small text-muted mb-4">Category</h6>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="pl-lg-4">
                                            <div class="row">





                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.CategoryID, "CategoryID", htmlAttributes: new { @class = "form-control-label" })

                                                        @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">

                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.SubCatName, htmlAttributes: new { @class = "form-control-label" })

                                                        @Html.EditorFor(model => model.SubCatName, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.SubCatName, "", new { @class = "text-danger" })

                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.SubCatCode, htmlAttributes: new { @class = "form-control-label" })



                                                        <input type="number" class="form-control" value="@Model.SubCatCode" name="SubCatCode" readonly="readonly" />


                                                        @Html.ValidationMessageFor(model => model.SubCatCode, "", new { @class = "text-danger" })

                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Units, htmlAttributes: new { @class = "form-control-label" })

                                                        <select class="form-control" name="Units">
                                                            @{
                                                                foreach (var item in ViewBag.units)
                                                                {
                                                                    if (Model.Units == item.UnitShortName)
                                                                    {
                                                                        <option value="@item.UnitShortName" selected="selected">@item.UnitShortName</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@item.UnitShortName">@item.UnitShortName</option>
                                                                    }

                                                                }
                                                            }

                                                        </select>
                                                        @Html.ValidationMessageFor(model => model.Units, "", new { @class = "text-danger" })

                                                    </div>
                                                </div>
                                                <div class="col-lg-12">

                                                    @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "form-control-label" })

                                                    @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })


                                                </div>


                                                <div class="col-lg-12 hide ">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.SortOrder, htmlAttributes: new { @class = "form-control-label" })



                                                        <input type="number" class="form-control" value="@Model.SortOrder"  name="SortOrder" readonly="readonly" />

                                                        @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger" })

                                                    </div>
                                                </div>


                                                <div class="col-lg-12">

                                                    <br />
                                                    <div class="form-group">
                                                        <input type="submit" value="Update" class="btn btn-primary btn-block" />
                                                    </div>


                                                </div>
                                            </div>


                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>