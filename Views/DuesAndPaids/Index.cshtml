@model IEnumerable<Logistic_Inventory.Models.DuesAndPaids>

@{
    ViewBag.Title = "Index";
    var i = 1;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive  table-hover">
    <tr>
        <th>SL</th>
        <th>
            @Html.DisplayNameFor(model => model.Purchase.Projects.ProjectName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Purchase.Branch.BranchName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Purchase.Invoice)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Purchase.PurchaseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPayable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDue)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@i</td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase.Projects.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase.Branch.BranchName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Purchase.Invoice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase.PurchaseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPayable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPaid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDue)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
    i++;
}

</table>
