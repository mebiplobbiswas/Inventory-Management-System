@model IEnumerable<Logistic_Inventory.Models.Providers>

@{
    ViewBag.Title = "Providers/Supplier Report";
    var i = 1;
    var j = 1;
    var k = 1;


    var fileName = System.IO.Path.Combine(Server.MapPath("~/Content/img/logo/"), "banner_350.png");

    ViewBag.banner = "data:image/gif;base64," + Convert.ToBase64String(File.ReadAllBytes(fileName));
    ViewBag.page = "supplier";

}


<link rel="stylesheet" type="text/css" href="~/Content/datatable/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/jquery.dataTables.js"></script>


<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/buttons.print.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/dataTables.buttons.min.js"></script>

<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/buttons.flash.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/jszip.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/pdfmake.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/vfs_fonts.js"></script>
<script type="text/javascript" charset="utf8" src="~/Scripts/datatable/buttons.html5.min.js"></script>

 

<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h3 class="h2 text-white d-inline-block mb-0"> Suppliers/Providers</h3>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/home")"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/providers")">Suppliers</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/Providers/create")" class="btn btn-md btn-default">Add New Supplier</a>
                   
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-header">
                    <div class="container">
                        <div class="row justify-content-center">
                            <ul class="nav nav-pills nav-fill flex-column flex-sm-row" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0 active show" data-toggle="tab" href="#home">All Suppliers </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0" data-toggle="tab" href="#menu1">Supplierwise Collection</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0" data-toggle="tab" href="#menu2">Supplier Collection Stats</a>
                                </li>

                            </ul>

                        </div>

                    </div>
                 

                </div>

                <div class="card-body">






                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane   active" id="home">

                            <br />

                            <table class="table table-responsive  table-hover table-bordered" id="tbl1">
                                <thead>
                                    <tr class="th_bg">
                                        <th>Sl</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CompanyName)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Mobile)
                                        </th>




                                        <th class="no-print"></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.id">
                                            <td>@i</td>
                                            <td>
                                                <b>  @Html.DisplayFor(modelItem => item.CompanyName)</b>
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mobile)
                                            </td>




                                            <td class="no-print">
                                                <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">

                                                    <label class="btn btn-sm btn-default btn-simple active" onclick="edit(@item.id)">


                                                        <input type="radio" name="options" checked="">
                                                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Edit</span>
                                                        <span class="d-block d-sm-none">
                                                            <i class="fa fa-edit"></i>
                                                        </span>

                                                    </label>

                                                    <label class="btn btn-sm btn-default btn-simple" id="1" onclick="details(@item.id)">
                                                        <input type="radio" class="d-none d-sm-none" name="options">
                                                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Details</span>
                                                        <span class="d-block d-sm-none">
                                                            <i class="tim-icons icon-notes"></i>
                                                        </span>
                                                    </label>
                                                    <button class="btn btn-sm btn-default btn-simple" id="2" onclick="deletes(@item.id)">
                                                    
                                                        <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Delete</span>
                                                        <span class="d-block d-sm-none">
                                                            <i class="tim-icons icon-simple-remove"></i>
                                                        </span>
                                                    </button>
                                                </div>


                                            </td>

                                        </tr>
                                        i++;
                                    }

                                </tbody>
                            </table>





                        </div>
                        <div class="tab-pane  fade" id="menu1">

                            <br />

                            <table class="display table dataTable" style="font-weight:bold;width:100%" id="tbl2">
                                <thead class="text-primary">
                                    <tr>
                                        <th>SL</th>
                                        <th>Date</th>
                                        <th>
                                            Provider
                                        </th>


                                        <th>
                                            Invoice
                                        </th>
                                        <th>
                                            Products
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Total
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewData["AllPurchases"] as List<Logistic_Inventory.Models.db_first.vPurchaseList>)
                                    {
                                        <tr>
                                            <td>@j</td>
                                            <td>
                                                @item.PurchaseDate.ToShortDateString()
                                            </td>
                                            <td>
                                                @item.ProviderName
                                            </td>
                                            <td>

                                                <a style="font-size:16px" href="/purchases/Details/@item.id" target="_blank"> @item.Invoice</a>

                                            </td>
                                            <td>
                                                @item.ProductsListNames
                                            </td>
                                            <td>
                                                @item.ProductsListQuantity
                                            </td>
                                            <td>
                                                @item.NetPayable
                                            </td>

                                        </tr>
                                        j++;
                                    }
                                </tbody>

                            </table>

                        </div>



                        <div class="tab-pane  fade" id="menu2">

                            <br />

                            <table class="display table dataTable" style="font-weight:bold;width:100%" id="tbl3">

                                <thead class="text-primary">

                                    <tr>
                                        <th>SL</th>

                                        <th>
                                            Provider
                                        </th>


                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Purchase Count
                                        </th>

                                        <th>
                                            Total
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewData["ProviderPurchaseStat"] as List<Logistic_Inventory.Models.db_first.vProvidersBalance>)
                                    {
                                        <tr>
                                            <td>@k</td>

                                            <td>
                                                @item.ProviderName
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @item.Count
                                            </td>
                                            <td>
                                                @item.Total
                                            </td>

                                        </tr>
                                        k++;
                                    }
                                </tbody>

                            </table>

                        </div>



                    </div>


                </div>
            </div>

        </div>
    </div>


</div>















