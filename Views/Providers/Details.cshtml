@model Logistic_Inventory.Models.Providers

@{
    ViewBag.Title = "Details";
    ViewBag.page = "supplier";
}

 






<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h3 class="h2 text-white d-inline-block mb-0"> Suppliers/Providers</h3>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/home")"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/providers")">Suppliers</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Details</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/Providers/")" class="btn btn-md btn-default">Supplier List </a>
                    <button class="btn btn-default" id="printNow"><i class="fa fa-print" aria-hidden="true"></i> Print</button>

                </div>
            </div>
        </div>
    </div>
</div>


<!-- Page content -->
<div class="container-fluid mt--6" id="print">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0 no-print">Supplier Details</h3>
                </div>
                <div class="card-body">
                    <div class="row icon-examples">


                        <div class="container">
                            <div class="row">
                                <div class="col-sm text-center">
                                    <i class="ni ni-delivery-fast" style="font-size: 200px;"></i>

                                    <br />
                                    <br />
                                    <br />

                                    <ul class="nav nav-pills nav-fill flex-column flex-sm-row no-print">
                                        <li class="nav-item">
                                            <a class="nav-link mb-sm-3 mb-md-0 active" href="/Providers/edit/@Model.id">Edit</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link mb-sm-3 mb-md-0 btn btn-danger text-danger" id="tabs-text-2-tab" onClick="deletes(@Model.id)">Delete</a>
                                        </li>

                                    </ul>


                                </div>
                                <div class="col-sm">
                                    <h1>  @Html.DisplayFor(model => model.CompanyName)</h1>
                                    <h6><span class="badge badge-primary" style="font-size:15px"> @Html.DisplayFor(model => model.Address)</span></h6>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </div>
                                        <div class="col">
                                            <b>@Html.DisplayFor(model => model.Email)</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </div>
                                        <div class="col">
                                            @if (Model.Phone == null)
                                            {
                                                <b>-</b>
                                            }
                                            else
                                            {
                                                <b>@Html.DisplayFor(model => model.Phone)</b>
                                            }

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.Mobile)
                                        </div>
                                        <div class="col">
                                            @if (Model.Mobile == null)
                                            {
                                                <b>-</b>
                                            }
                                            else
                                            {
                                                <b>@Html.DisplayFor(model => model.Mobile)</b>
                                            }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            Production Cost
                                        </div>
                                        <div class="col">
                                            <b>@Html.DisplayFor(model => model.JoiningDate)</b>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            Selling Price
                                        </div>
                                        <div class="col">
                                            <b>@Html.DisplayFor(model => model.JoiningDate)</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            Unit
                                        </div>
                                        <div class="col">
                                            <b>@Html.DisplayFor(model => model.BankAcc)</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            Product Category
                                        </div>
                                        <div class="col">
                                            <b> @Html.DisplayFor(model => model.BankAcc)</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.TIN)
                                        </div>
                                        <div class="col">
                                            @if (Model.TIN == null)
                                            {
                                                <b>-</b>
                                            }
                                            else
                                            {
                                                <b>@Html.DisplayFor(model => model.TIN)</b>
                                            }

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.DealingPerson)
                                        </div>
                                        <div class="col">
                                            <b> @Html.DisplayFor(model => model.DealingPerson)</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            @Html.DisplayNameFor(model => model.Comment)
                                        </div>
                                        <div class="col">
                                            <b> @Html.DisplayFor(model => model.Comment)</b>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                     

                                </div>
                            </div>
                        </div>

                        

                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


<script>

    $("#printNow").click(function () {

        var toPrint = document.getElementById('print');

        var popupWin = window.open('', '', 'toolbar=yes,scrollbars=yes,resizable=yes,width=800,height=800,location=no,left=200px');
        popupWin.document.open();
        popupWin.document.write('<html><head><title> Report </title><style>h1{font-size:20px} h4{font-size:14px}@@media print {a[href]:after {content: none !important;}}  .no-print{display: none;} .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td{}a[href]: after { content: none!important; } </style >   <link rel="stylesheet" href="/Content/argon/css/argon.css?v=1.2.0" type="text/css">  <link rel="stylesheet" href="/Content/argon/vendor/nucleo/css/nucleo.css" type="text/css"></head > ');


        popupWin.document.write('<body onload="window.print();" style="padding:5%"> <div >  ');
        popupWin.document.write('<img src="/Content/img/logo/banner_500.png"><br/>');



        popupWin.document.write('<table class="table table-responsive  table-hover table-bordered" style="font-size:12px" id="print">');
        popupWin.document.write(toPrint.innerHTML);
        popupWin.document.write('</table>');




        popupWin.document.write('</div></body></html>');
        popupWin.document.close();

    });

    function deletes(id) {
        // window.location.href = "/Categories/delete/" + id;
        var con = confirm('Are you sure you want to delete ?');
        if (con) {
            // Save it!
            var url = "/Api/DeleteSupplier?catId=" + id;
            $.get(url, function (data) {

                console.log(data);
                var Status = data["status"];
                var Code = parseInt(data["code"]);


                $("#row_" + id).remove();




                window.location.href = "/Providers" ;
            });

        } else {
            // Do nothing!
            return false;
        }

        return false;

    }
</script>