@model IEnumerable<Logistic_Inventory.Models.UseProductsInProject>

@{
    ViewBag.Title = "Index";
    var i = 1;
}

<div class="row" ">
    <div class="col-md-6">
        <h1 style="margin:0" class="center-block">
            <i class="tim-icons icon-notes"></i> Use Products In Project


        </h1>

    </div>
    <div class="col-md-6">
        <div class="btn-group btn-group " style="float:right;">

            <a class="btn btn-default" href="@Url.Content("~/UseProductsInProject/create")" style="color:white"><i class="tim-icons icon-pencil"></i> &nbsp;Add New </a>

            <button class="btn btn-default"><i class="fa fa-search"></i>  Search</button>



            <button class="btn btn-default" id="d3" onclick="print()"><i class="fa fa-print" aria-hidden="true"></i> Print</button>



        </div>
    </div>
</div>

<br />

<table class="table table-responsive  table-hover table-bordered">
    <tr>
        <th>SL</th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Project
        </th>
        <th>
            Invoice
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StocksUsedList)
        </th>
        <th>
            Total Products
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StocksUsedList)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.ProductCount)
            </td>


            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                *@

                <a style="font-size:20px" href="/UseProductsInProject/Delete/@item.id"><i class="tim-icons icon-simple-remove"></i></a>


            </td>
        </tr>

        i++;
    }

</table>
