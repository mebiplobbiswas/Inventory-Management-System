@model Logistic_Inventory.Models.ProjectNotes

@{
    ViewBag.Title = "Create";

}

<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"> Product Categories</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/projectNotes")" class="btn btn-md btn-primary">All Notes</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container col-md-6 mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "form-control-label" })
                                <div class=" ">
                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SubTopic, htmlAttributes: new { @class = "form-control-label" })
                                <div class=" ">
                                    @Html.EditorFor(model => model.SubTopic, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SubTopic, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "form-control-label" })
                                <div class=" ">
                                    @*@Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })*@




                                    <textarea class="form-control" data-val="true"   id="Details" rows="2"
                                              name="Details" type="text" value=""></textarea>
                                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })

                                </div>
                            </div>

                           


                            <div class="form-group">
                                     <input type="submit" value="Save" class="btn btn-default btn-block" />
                             
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

 